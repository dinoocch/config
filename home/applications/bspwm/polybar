[colors]
 base = #1e1e2e
 mantle = #181825
 crust = #11111b

 text = #cdd6f4
 subtext0 = #a6adc8
 subtext1 = #bac2de

 surface0 = #313244
 surface1 = #45475a
 surface2 = #585b70
 
 overlay0 = #6c7086
 overlay1 = #7f849c
 overlay2 = #9399b2
 

 blue = #89b4fa
 lavender = #b4befe
 sapphire = #74c7ec
 sky = #89dceb
 teal = #94e2d5
 green = #a6e3a1
 yellow = #f9e2af
 peach = #fab387
 maroon = #eba0ac
 red = #f38ba8
 mauve = #cba6f7
 pink = #f5c2e7
 flamingo = #f2cdcd
 rosewater = #f5e0dc

 transparent = #FF00000

[bar/main]
monitor = ${env:MONITOR:}
width = 100%
height = 27
radius = 0
fixed-center = true
background = ${colors.base}
foreground = ${colors.text}
line-size = 3
border-size = 0
padding-left = 1
padding-right = 1
module-margin-left = 2
module-margin-right = 2

font-0 = Comic Code Ligatures:size=11;2
font-1 = Font Awesome 6 Free Regular:size=11;2
font-2 = Noto Color Emoji:size=9;2

cursor-click = pointer
cursor-scroll = ns-resize

modules-left = bspwm 
; modules-center = title
modules-right = eth memory cpu date
tray-position = right
tray-detached = false
wm-restack = bspwm

[module/bspwm]
type = internal/bspwm


label-focused = %index%
label-focused-foreground = ${colors.text}
label-focused-background = ${colors.mantle}
label-focused-underline = ${colors.pink}
label-focused-padding = 1

label-occupied = %index%
label-occupied-foreground = ${colors.text}
label-occupied-background = ${colors.mantle}
label-occupied-underline = ${colors.sky}
label-occupied-padding = 1

label-urgent = %index%
label-urgent-foreground = ${colors.text}
label-urgent-background = ${colors.mantle}
label-urgent-underline = ${colors.red}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.subtext1}
label-empty-background = ${colors.base}
label-empty-padding = 1

[module/title]
type = internal/xwindow

[module/eth]
type = internal/network
interface = enp7s0
interface-type = wired
interval = 5

[module/memory]
type = internal/memory
interval = 3
warn-percentage = 80
format = <label> <bar-used>
label = 
; bar-used-foreground-0 = ${colors.green}
; bar-used-foreground-1 = ${colors.sky}
; bar-used-foreground-1 = ${colors.lavender}
; bar-used-foreground-2 = ${colors.peach}
; bar-used-foreground-3 = ${colors.red}

[module/cpu]
type = internal/cpu
interval = 1
warn-percentage = 95
format = <label> <bar-load>
label = 
; bar-used-foreground-0 = ${colors.green}
; bar-used-foreground-1 = ${colors.sky}
; bar-used-foreground-1 = ${colors.lavender}
; bar-used-foreground-2 = ${colors.peach}
; bar-used-foreground-3 = ${colors.red}

[module/date]
type = internal/date
interval = 1.0

date = %Y-%m-%d%
time = %H:%M
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S

[global/wm]
margin-top = 0
margin-bottom = 0

